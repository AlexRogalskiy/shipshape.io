<centered>
  <grid>
    <centered xs="12" id="ember-addons">
      <h1 class="heading">Ember Addons</h1>
    </centered>
    {{#each projects as |project|}}
      <centered xs="12" sm="6" md="4">
        <vbox>
          <hbox>
            <centered xs="12">
              <centered xs="10">
                {{device-mock name=project.repo}}
              </centered>
            </centered>
          </hbox>
          <hbox>
            <centered xs="12">
              <h2>{{project.name}}</h2>
            </centered>
          </hbox>
          <hbox>
            <centered xs="12">
              {{fa-icon 'star' size='lg'}} <span class="stars">{{project.stars}}</span>
              <a href="https://github.com/shipshapecode/{{project.repo}}">{{fa-icon "github-alt" size='lg'}}</a>
            </centered>
          </hbox>
        </vbox>
      </centered>
    {{/each}}
  </grid>
</centered>

{{#scroll-to href='#sponsored-oss'}}
  {{scroll-suggest}}
{{/scroll-to}}
