<div class="{{this.styleNamespace}}">
  {{#each this.paginatedPosts as |post|}}
    <div class="blog-post border-b-2 border-grey-transparent border-solid pt-2 pb-2">
      {{link-to post.attributes.title "blog.post" post.attributes.slug class="title"}}

      <div class="attribution">
        By {{post.author.attributes.name}} {{date-format post.attributes.date "MM/DD/YYYY"}}
      </div>

      <div class="tags pb-6 pt-6">
        {{#each post.attributes.categories as |tag|}}
          {{link-to tag "blog.categories.category" (space-to-dash tag) class="tag"}}
        {{/each}}
      </div>
    </div>
  {{/each}}
</div>

<Pagination
  @navigatePages={{@navigatePages}}
  @page={{@page}}
  @totalPosts={{@totalPosts}}
>
</Pagination>