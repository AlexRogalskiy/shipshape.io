<page class="hero">
  <vbox align="center">
    <h1>Let's create something amazing.</h1>
    <h2>We would love to work on your next Ember app or addon.</h2>
  </vbox>

  <centered>
    <form class="cd-form floating-labels"
      {{action (route-action 'sendContactRequest' model) on="submit"}}>
      <fieldset>
        <legend>Personal Info</legend>
        <centered xs="12">
          {{contact-input
            fieldName="name"
            labelText="Name"
            required=true
            type="text"
            value=model.name
          }}
        </centered>

        <centered xs="12">
          {{contact-input
            fieldName="company"
            labelText="Company"
            required=false
            type="text"
            value=model.company
          }}
        </centered>

        <centered xs="12">
          {{contact-input
            fieldName="email"
            labelText="Email"
            required=true
            type="email"
            value=model.email
          }}
        </centered>
      </fieldset>

      <fieldset>
        <legend>Project Info</legend>

        <centered xs="12">
          {{form-list
            groupValue=model.projectType
            options=projectTypes
            type="radio"}}
        </centered>

        <centered xs="12">
          {{contact-input
            fieldName="textarea"
            labelText="Project description"
            required=true
            textarea=true
            value=model.description
          }}
        </centered>

      </fieldset>

      <div>
        <input type="submit" value="Send Message">
      </div>
    </form>
  </centered>
</page>
